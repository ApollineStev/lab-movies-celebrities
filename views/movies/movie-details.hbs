<div>
  <h2>{{movie.title}}</h2>
  <p>genre: {{movie.genre}}</p>
  <p>plot: {{movie.plot}}</p>
</div>
<div>
  <p>cast:</p>
    {{#each cast}}
    <div>
      <p>{{this.name}}</p>
      <p>{{this.occupation}}</p>
      <p>{{this.catchPhrase}}</p>
    </div>
    {{/each}}
  </p>
</div>
<div>
    <form action="/movies/{{movie._id}}/delete" method="POST">
        <button>Delete</button>
    </form>
</div>

<a href="/movies">Back</a>