<h2>New movie</h2>
<a href="/">Go Back!</a>
<br>
<br>
<form action="" method="POST">
  <br />
  <label for="title">Title:</label>
  <br />
  <input type="text" name="title" />
  <br />
  <label for="genre">Genre:</label>
  <br />
  <input type="text" name="genre" />
  <br />
  <label for="plot">Description:</label>
  <br />
  <textarea name="plot" rows="5" cols="33"></textarea>
  <br />
  <label for="cast">Choose a celebrity:</label>
  <br />
  <select name="cast" id="celebrities" multiple>
    {{#each allCeleb}}
      <option name="cast" value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>
  <br />
  <br />
  <button>Create!</button>
</form>